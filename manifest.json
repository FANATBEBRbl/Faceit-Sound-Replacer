{
  "manifest_version": 2,
  "name": "Faceit Sound Replacer (Network)",
  "version": "1.0",
  "description": "Ставим любой звук на принятие игры на Faceit",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
  "sounds/config.json",
  "sounds/custom.mp3",
  "sounds/custom1.mp3",
  "sounds/custom2.mp3",
  "sounds/custom3.mp3",
  "sounds/custom4.mp3",
  "sounds/custom5.mp3",
  "sounds/custom6.mp3"
  ],
  "browser_action": {
    "default_popup": "main.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.faceit.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}